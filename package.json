{
  "name": "forwardimpact-monorepo",
  "version": "0.5.0",
  "private": true,
  "description": "Applications that help teams grow and cultivate world-class engineers in the age of AI",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/forwardimpact/monorepo"
  },
  "homepage": "https://www.forwardimpact.team",
  "type": "module",
  "workspaces": [
    "products/map",
    "libraries/libpathway",
    "products/pathway",
    "products/basecamp",
    "libraries/libdoc",
    "libraries/libsecret",
    "libraries/libindex",
    "libraries/libtelemetry",
    "libraries/libutil",
    "libraries/libtype",
    "libraries/libconfig",
    "libraries/libstorage",
    "libraries/libpolicy",
    "libraries/librpc",
    "libraries/libllm",
    "libraries/libagent",
    "libraries/libgraph",
    "libraries/libmemory",
    "libraries/libresource",
    "libraries/libvector",
    "libraries/libharness",
    "libraries/libcodegen",
    "libraries/libsupervise",
    "libraries/librc",
    "libraries/libformat",
    "libraries/libweb",
    "services/agent",
    "services/graph",
    "services/llm",
    "services/memory",
    "services/tool",
    "services/trace",
    "services/vector",
    "services/web"
  ],
  "scripts": {
    "prestart": "npx fit-pathway build",
    "start": "npx serve public",
    "dev": "npx fit-pathway dev",
    "check": "npm run format && npm run lint && npm run test && npm run validate -- --json",
    "check:fix": "npm run format:fix && npm run lint:fix",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "test": "find ./tests ./libraries ./products ./services -name '*.test.js' -not -path '*/node_modules/*' | xargs node --test",
    "test:e2e": "npx playwright test",
    "validate": "npx fit-map validate"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.7.4",
    "serve": "^14.2.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
